{
  "name": "google-color-palette",
  "version": "1.0.0",
  "description": "color palette generator",
  "main": "dist/palette.js",
  "private": false,
  "license": "Apache 2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/google/palette.js"
  },
  "scripts": {
    "prepublish": "npm run test && npm run build && npm run uglify",
    "build": "rimraf dist && mkdir dist && npm run build:js",
    "build:js": "babel src --out-dir dist",
    "test": "cross-env NODE_ENV=test karma start test/karma.conf.js",
    "test:dev": "cross-env NODE_ENV=test karma start test/karma.dev.conf.js",
    "uglify": "recursive-uglifyjs dist",
    "demo": "grunt serve"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-plugin-rewire": "^1.0.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "cross-env": "^3.1.3",
    "grunt": "^1.0.1",
    "grunt-browserify": "^5.0.0",
    "grunt-build-control": "^0.7.1",
    "grunt-cli": "^1.2.0",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-connect": "^1.0.2",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify": "^2.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "jasmine-core": "^2.5.2",
    "jasmine-promises": "^0.4.1",
    "jit-grunt": "^0.10.0",
    "karma": "^1.3.0",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-browserify": "^5.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sinon": "^1.0.5",
    "phantomjs-polyfill-find": "github:ptim/phantomjs-polyfill-find",
    "phantomjs-polyfill-object-assign": "0.0.2",
    "promise-polyfill": "^6.0.2",
    "recursive-uglifyjs": "^1.0.0",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.6",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  }
}
